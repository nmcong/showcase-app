# ================================================
# VPS Deployment Configuration
# ================================================
# Copy file này thành .env.deploy và điền thông tin của bạn
# KHÔNG commit .env.deploy lên git!

# ================================================
# VPS SSH Connection
# ================================================
VPS_HOST=your-vps-ip-or-domain
VPS_PORT=22
VPS_USER=root
VPS_PASSWORD=your-vps-password
# Hoặc sử dụng SSH key (để trống password nếu dùng key)
# VPS_SSH_KEY=~/.ssh/id_rsa

# ================================================
# Domains
# ================================================
APP_DOMAIN=showcase.yourdomain.com
KEYCLOAK_DOMAIN=auth.yourdomain.com

# ================================================
# Database Configuration
# ================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=showcase_db
DB_USER=showcase_user
DB_PASSWORD=create_strong_db_password_here

# Keycloak Database
KEYCLOAK_DB_NAME=keycloak_db
KEYCLOAK_DB_USER=keycloak_user
KEYCLOAK_DB_PASSWORD=create_strong_keycloak_db_password_here

# ================================================
# Keycloak Configuration
# ================================================
KEYCLOAK_VERSION=26.4.5
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=create_strong_admin_password_here
KEYCLOAK_INSTALL_PATH=/opt/keycloak

# ================================================
# Application Configuration
# ================================================
APP_INSTALL_PATH=/var/www/showcase-app
APP_PORT=3000
NODE_ENV=production

# Keycloak Client (sẽ được tạo sau khi setup Keycloak)
KEYCLOAK_CLIENT_ID=showcase-client
KEYCLOAK_CLIENT_SECRET=will_be_generated_after_keycloak_setup

# ================================================
# Git Repository
# ================================================
GIT_REPO_URL=https://github.com/yourusername/showcase-app.git
GIT_BRANCH=main

# ================================================
# SSL/TLS Configuration
# ================================================
SSL_EMAIL=your-email@example.com
USE_SSL=true

# ================================================
# Backup Configuration
# ================================================
BACKUP_PATH=/var/backups/showcase
BACKUP_RETENTION_DAYS=7

# ================================================
# Performance Settings
# ================================================
# Keycloak JVM Settings (cho 4GB RAM)
KEYCLOAK_JVM_XMS=512m
KEYCLOAK_JVM_XMX=1536m

# PostgreSQL Settings (cho 4GB RAM)
PG_SHARED_BUFFERS=1GB
PG_EFFECTIVE_CACHE_SIZE=2GB
PG_MAINTENANCE_WORK_MEM=256MB
PG_WORK_MEM=4MB

# PM2 Settings
PM2_INSTANCES=2
PM2_MAX_MEMORY=1024M

