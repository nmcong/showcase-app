# VPS Connection Settings
VPS_HOST=your-vps-ip-or-domain
VPS_PORT=22
VPS_USER=root
VPS_PASSWORD=your-vps-password
# OR use SSH key (leave password empty if using key)
# VPS_SSH_KEY=~/.ssh/id_rsa

# Application Settings
APP_DOMAIN=showcase.yourdomain.com
APP_PORT=3000
APP_INSTALL_PATH=/var/www/showcase-app

# Git Repository
GIT_REPO_URL=https://github.com/yourusername/showcase-app.git
GIT_BRANCH=main

# Node.js Environment
NODE_ENV=production

# PM2 Settings (for 2 CPU cores)
PM2_INSTANCES=2
PM2_MAX_MEMORY=1024M

